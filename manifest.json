{
    "name": "fanli heatmap",
    "version" : "1.0.0",
    "manifest_version" : 2,
    "icons" : {
        "16" : "icon.png",
        "30" : "icon.png"
    },
    "browser_action" : {
        "default_title" : "返利热力图",
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },
    "content_scripts" : [
        {
            "matches" : ["*://*.fanli.com/*"],
            "css" : ["custom.css"],
            "js" : ["jquery.js","heatmap.min.js","custom.js"],
            "run_at" : "document_idle"
        }
    ],
    "permissions" : [
        "tabs"
    ]
}
